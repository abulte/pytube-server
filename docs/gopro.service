[Unit]
Description=gopro uWSGI app
After=syslog.target

[Service]
ExecStart=/home/alexandre/pytube-server/pyenv/bin/uwsgi \
        --socket :8000 --manage-script-name --mount /gopro=app:app \
	--virtualenv /home/alexandre/pytube-server/pyenv/ \
	--chdir /home/alexandre/pytube-server
User=alexandre
Group=www-data
Restart=on-failure
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target
